{
  "schemaVersion": 1,
  "id": "patchouli",
  "version": "${version}",

  "name": "Patchouli",
  "description": "Patchouli: Accessible, Data-Driven, Dependency-Free Documentation for Minecraft Modders and Pack Makers",
  "authors": [
    "Vazkii",
    "williewillus"
  ],
  "contact": {
    "sources": "https://github.com/Vazkii/Patchouli"
  },

  "license": "CC BY-NC-SA 3.0",
  "icon": "assets/patchouli/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "vazkii.patchouli.common.base.Patchouli"
    ],
    "client": [
      "vazkii.patchouli.client.base.ClientInitializer"
    ],
    "fabric-gametest": [
      "vazkii.patchouli.common.base.PatchouliSmokeTest"
    ]
  },
  "mixins": [
    "patchouli.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12",
    "fabric": ">=0.44",
    "minecraft": ">=1.19-alpha"
  }
}
